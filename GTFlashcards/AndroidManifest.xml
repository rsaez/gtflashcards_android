<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gtflashcards"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />
    
    

    <application
        android:name="GTFlashcards"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.gtflashcards.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.gtflashcards.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="com.example.gtflashcards.NewFlashcardActivity"
            android:label="@string/title_activity_new_flashcard" >
        </activity>
        <activity
            android:name="com.example.gtflashcards.FlashcardListActivity"
            android:label="@string/title_flashcard_list" >
        </activity>
        <activity
            android:name="com.example.gtflashcards.FlashcardDetailActivity"
            android:label="@string/title_flashcard_detail"
            android:parentActivityName=".FlashcardListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".DeckListActivity" />
        </activity>
        <activity
            android:name="com.example.gtflashcards.NewDeckActivity"
            android:label="@string/title_activity_new_deck" >
        </activity>
        <activity
            android:name="com.example.gtflashcards.DeckListActivity"
            android:label="@string/title_activity_deck_list" >
        </activity>
    </application>

</manifest>
